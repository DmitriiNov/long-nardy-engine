{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  }
}
